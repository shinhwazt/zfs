/* pages/selectAddress/selectAddress.wxss */
.selectAddressPanel{
  width: 100%;
  position: fixed;
  top: 0;left: 0;
  bottom: 0;background-color: #f4f4f4;
  overflow-x: hidden;
  overflow-y: scroll;
}

.address-group{
  height: auto;width: 100%;background-color: white;
  margin-top: 25rpx
}

.add-item{
  height: 80rpx;width: 100%;background-color: white;font-size: 28rpx;
  line-height: 80rpx;text-align: center;
  position: relative;
}

.address-item{
  height: 128rpx;
  width: 100%;
  
  position: relative;
  display: flex;
}
.address-item-clear{
  width: 74rpx;
}
.address-item-info{
  flex: 1;
  height: 128rpx;
  border-bottom: 1px solid #e4e4e4;
  overflow: hidden;
  box-sizing: border-box
}
.address-item-edit{
  height: 128rpx;
  width: 116rpx;
  border-bottom: 1px solid #e4e4e4;
  background-image: url(http://zaofanshi-erp-image.oss-cn-beijing.aliyuncs.com/logo/59ef00b6-ef2f-4080-a546-89ac68fedca1?Expires=1829898563&OSSAccessKeyId=LTAILdGFo9ChjfkY&Signature=hmUntopIX226z0yusYyMK4uwpYo%3D);
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 31rpx 34rpx;
  box-sizing: border-box
  
}
.address-item-delete{
height: 128rpx;
  width: 116rpx;
  background-color: red;
  text-align: center;
  line-height: 128rpx;
  position: absolute;
  right: -116rpx;
  top: 0;
  font-size: 32rpx;
  color: white
}

.address-item-delete{
  height: 128rpx;
  width: 116rpx;
  
}
.address-text{
  font-size: 32rpx;
  height: 40rpx;
  width: 100%;
  text-align: left;
  line-height: 40rpx;
  overflow: hidden;
  margin-top: 35rpx

}
.user-text{
  font-size: 26rpx
}