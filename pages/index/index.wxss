}

.count{
  display: inline-block;
  width: 38rpx;text-align: center;
  height: 39rpx;font-size: 20rpx;
  vertical-align: top;line-height: 39rpx;color: #999
}
.cutIconCar{
  display: inline-block;
  background-image: url(http://zaofanshi-erp-image.oss-cn-beijing.aliyuncs.com/logo/05f6d67e-e31a-4899-adab-d37e0d32d78d?Expires=1829898649&OSSAccessKeyId=LTAILdGFo9ChjfkY&Signature=5TkqyRrSptQpoy6vNO%2BRcQ%2BEzk0%3D);
  background-repeat: no-repeat;
  height: 39rpx;
  width: 39rpx;
  background-position-x:0rpx;
background-position-y:0rpx;
vertical-align: middle;
overflow:hidden;
background-size:80rpx 80rpx;

}
.addIconCar{
  display:inline-block;
background-image:url(http://zaofanshi-erp-image.oss-cn-beijing.aliyuncs.com/logo/05f6d67e-e31a-4899-adab-d37e0d32d78d?Expires=1829898649&OSSAccessKeyId=LTAILdGFo9ChjfkY&Signature=5TkqyRrSptQpoy6vNO%2BRcQ%2BEzk0%3D);
background-repeat:no-repeat;
height:39rpx;
width:39rpx;
background-position-x:-42rpx;
background-position-y:0rpx;
overflow:hidden;
vertical-align: middle;
background-size:80rpx 80rpx;

}

.show-car-item-cost{
  height: 39rpx;
  width: auto;
  
  display: inline-block;
  font-size: 32rpx;
  margin-right: 31rpx
}

.show-car-item-count{
  width: 60rpx;
  height: 39rpx;
  display: inline-block;
  font-size: 32rpx;
  text-align: center;
  line-height: 39rpx;
}

.tabBar{
  height: 75rpx;width: 100%;display: flex;
  box-sizing: border-box;
  border-bottom: 1px solid #E4E4E4;
}
.tab{
  flex: 1;text-align: center
}
.tabBar .tab .text{
  display: block;
  height: 75rpx;
  padding: 0 10rpx;
  font-size: 28rpx;
  width: 80rpx;
  line-height: 75rpx;
  margin: 0 auto;
}
.tabActive{
  box-sizing: border-box;
  border-bottom: 2px solid #FFAF02
}
