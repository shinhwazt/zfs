<view class='order-list'>
  <view class='order-item' wx:for='{{orders}}' wx:key='*this'>
    <view class='order-item-content'>
      <view class='item-info'>
        <view class='label'>订单编号：</view>
        <view class='text'>{{item.shop_order_id_view}}</view>
      </view>
      <view class='item-info'>
        <view class='label'>下单时间：</view>
        <view class='text'>{{item.showTime}}</view>
      </view>
      <view class='item-info'>
        <view class='label'>总金额：</view>
        <view class='text'>￥{{item.total}}</view>
      </view>
    </view>
    <view class='order-item-details'>
    </view>
  </view>
</view>