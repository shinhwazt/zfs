/* pages/receipt/receipt.wxss */
.receipt-content{
  width: 100%;
  position: fixed;
  top: 0;left: 0;bottom: 0;
  background-color: #f4f4f4
}

.receipt-panel{
  height: 153rpx;width: 100%;background-color: white;
  margin-top:25rpx
}
.receipt-item{
  height: 75rpx;width: 100%;margin-left: 30rpx;
  border-bottom: 1rpx solid #e4e4e4;display: flex
}
.receipt-label{
  display: inline-block;
  height: 75rpx;box-sizing: border-box;
  padding-right: 20rpx;
  line-height: 75rpx;text-align: left;font-size: 28rpx;
}
.receipt-input{
  display: inline-block;
  flex: 1;
  height: 75rpx;
  font-size: 28rpx
}
.btn{
  height: 78rpx;width: 646rpx;
  background-color: #ffaf02;
  color: #333333;
  text-align: center;
  line-height: 78rpx;
  margin:194rpx auto 0 auto;
  font-size: 38rpx
}